<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scenc"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/scen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/box2"
        android:layout_width="1200dp"
        android:layout_height="700dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/box2" />

    <ImageView
        android:id="@+id/book2"
        android:layout_width="1280dp"
        android:layout_height="680dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/book2" />

    <ImageView
        android:id="@+id/trees"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/trees" />

    <ImageView
        android:id="@+id/trees1"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_marginLeft="660dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/trees1" />

    <ImageView
        android:id="@+id/jantawee3"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/jantawee3" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button_back" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="1120dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_r_a" />

    <ImageView
        android:id="@+id/oldmen1"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/animate_oldmen" />

    <ImageView
        android:id="@+id/oldwomen1"
        android:layout_width="250dp"
        android:layout_height="400dp"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/animate_oldwomen" />

    <ImageView
        android:id="@+id/word4"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="755dp"
        android:src="@drawable/word4"
        android:visibility="gone" />

</RelativeLayout>