<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scenc"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/box"
        android:layout_width="1060dp"
        android:layout_height="700dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/box" />

    <ImageView
        android:id="@+id/curtains2"
        android:layout_width="520dp"
        android:layout_height="100dp"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/curtains2" />

    <ImageView
        android:id="@+id/curtains"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginLeft="344dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/curtains" />

    <ImageView
        android:id="@+id/curtains1"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_alignTop="@+id/book1"
        android:layout_marginLeft="662dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/curtains1" />

    <ImageView
        android:id="@+id/book1"
        android:layout_width="wrap_content"
        android:layout_height="675dp"
        android:background="@null"
        android:src="@drawable/book1" />


    <ImageView
        android:id="@+id/janta1"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/animate_janta" />

    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button3"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/button_next" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/book1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/book1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/button_back" />


    <ImageView
        android:id="@+id/chair"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_marginLeft="400dp"
        android:background="@drawable/chair" />

    <ImageView
        android:id="@+id/jantawee1"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/animate_imageview" />

    <ImageView
        android:id="@+id/word1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/word1"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/word2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="980dp"
        android:src="@drawable/word2"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/word3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="400dp"
        android:src="@drawable/word3"
        android:visibility="gone"/>


    <ImageView
        android:id="@+id/yotsawimon1"
        android:layout_width="230dp"
        android:layout_height="400dp"
        android:layout_marginLeft="540dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/animate_yotsawimon" />


</RelativeLayout>
